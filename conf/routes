# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /github                     controllers.ApplicationController.index()
GET     /github/:username           controllers.ApplicationController.read(username: String)
POST    /github/user                controllers.ApplicationController.create()
PUT     /github/:username           controllers.ApplicationController.update(username: String)
DELETE  /github/:username           controllers.ApplicationController.delete(username: String)


GET     /github/users/:username     controllers.HomeController.getUser(username: String)
GET     /github/users/:username/repos     controllers.HomeController.getUserRepositories(username: String)
GET     /github/repos/:username/:repoName/contents     controllers.HomeController.getUserRepositoryContents(username: String, repoName: String)
GET     /github/repos/:username/:repoName/contents:path     controllers.HomeController.getUserRepositoryContentsPath(username: String, repoName: String, path: String)
GET     /github/repos/:username/:repoName/contents:path/open     controllers.HomeController.getFileContents(username: String, repoName: String, path: String)

GET     /github/repos/:username/:repoName/contents/new     controllers.HomeController.openNewFilePage(username: String, repoName: String, path: String)

POST    /github/repos/:username/:repoName/contents:path/new     controllers.HomeController.createNewFile(username: String, repoName: String, path: String)